<% if criterion.input.clause.in? ["exct", "gt", "lt"] %>
  <%= render "hammerstone/refine/inline/inputs/date_condition_days", input_fields: input_fields, criterion: criterion %>
<% elsif criterion.input.clause == "btwn" %>
  <%= render "hammerstone/refine/inline/inputs/date_condition_range", input_fields: input_fields, criterion: criterion %>
<% else %>
  <%= render "hammerstone/refine/inline/inputs/date_condition_single", input_fields: input_fields, criterion: criterion %>
<% end %>
