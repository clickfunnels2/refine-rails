<% 
  criterion = Hammerstone::Refine::Inline::Criterion.new(
    stable_id: @refine_filter.to_stable_id,
    client_id: @refine_client_id,
  )
%>

<%= turbo_frame_tag dom_id(criterion, :save) do %>
  <%= link_to new_hammerstone_refine_inline_stored_filter_path(criterion.to_params),
    class: "refine--save-filter-link" do %>
      <span class="refine--save-filter-link-label"><%= t('.save_filter') %></span>
  <% end %>
<% end %>

