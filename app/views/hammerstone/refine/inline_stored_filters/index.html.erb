<%= turbo_frame_tag dom_id(@refine_filter_builder, :load) do %>
  <%= content_tag :div, class: "refine-stored-filter-search-container" do %>
    <%= form_with(
        model: @refine_filter_builder,
        url: find_hammerstone_refine_inline_stored_filters_path,
        method: :post,
        scope: "hammerstone_refine_filters_builder",
        class: "refine-stored-filter-search-form") do |form| %>
      <!-- Saved filter selector -->
        <%= form.hidden_field :filter_class %>
        <%= form.hidden_field :client_id %>
        <%= tag.div class: 'refine-stored-filter-search-selector-container', data: {
          controller: 'fields--super-select',
          fields__super_select_enable_search_value: 'true'
        } do %>
          <select
            data-fields--super-select-target="select"
            name="id"
          >
            <option disabled selected value>&mdash; Select a saved filter &mdash;</option>
            <% @stored_filters.each do |filter| %>
              <option value="<%= filter.id %>">
                <%= filter.name %>
              </option>
            <% end %>
          </select>
        <% end %>
        <button class="refine-filter-inline-btn" data-action="click->refine--popup#hide" type="button">
          <%= t('global.buttons.cancel') %>
        </button>
        <%= form.submit t('global.buttons.choose_filter'), type: "submit", class: "refine-filter-inline-btn" %>
      <% end %>
    <% end %>
<% end%>
