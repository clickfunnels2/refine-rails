<% unless ['st', 'nst'].include? input[:clause] %>
  <% errors = @refine_filter.errors.full_messages
    has_errors = errors.any?
    error_class = "has-error" if has_errors
  %>

  <div class="mt-3 mr-3">
    <label for="<%= condition[:id] %>" class="sr-only"><%= condition[:display] %></label>
    <input
      class="rounded border border-solid border-coolGray-200 focus:ring-blue-500 focus:border-blue-500 sm:text-sm <%=error_class%> "
      name="<%= condition[:id] %>"
      type="text"
      value="<%= input[:value] %>"
      data-action="input->refine--update#updateBlueprint keydown->refine--update#cancelEnter"
    />

    <% # any error messages. %>
    <% if has_errors %>
      <p class="mt-2 text-xs text-red">
        <%= errors.join(",") %>
      </p>
    <% end %>
  </div>
<% end %>