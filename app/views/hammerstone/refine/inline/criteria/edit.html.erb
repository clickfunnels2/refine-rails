<%= turbo_frame_tag @criterion do %>
  <%= form_with model: @criterion,
    url: hammerstone_refine_inline_criterion_path(@criterion.position),
    method: :put,
    data: {
      turbo_frame: "_top",
      controller: "refine--criterion-form",
      refine__criterion_form_url_value: edit_hammerstone_refine_inline_criterion_url(
        @criterion.position, @criterion.to_params
      ),
      refine__criterion_form_turbo_frame_value: dom_id(@criterion)
    } do |form|
  %>
    <%= render "form_fields", form: form %>
  <% end %>
<% end %>
