<% unless ['st', 'nst'].include? input[:clause] %>
  <% errors = @refine_filter.errors.full_messages
    has_errors = errors.any?
    error_class = "has-error" if has_errors
  %>

  <div class="mt-3">
    <label for="<%= condition[:id] %>" class="sr-only"><%= condition[:display] %></label>
    <input
      class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md field <%=error_class%> "
      name="<%= condition[:id] %>"
      type="text"
      value="<%= input[:value] %>"
      data-action="input->refine--update#updateBlueprint blur->refine--update#submitForm"
    />

    <% # any error messages. %>
    <% if has_errors %>
      <p class="mt-2 text-xs text-red">
        <%= errors.join(",") %>
      </p>
    <% end %>
  </div>
<% end %>