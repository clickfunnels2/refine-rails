<%= turbo_frame_tag @refine_inline_criterion do %>
  <% @conditions.each do |condition| %>
    <%= link_to condition.display, new_hammerstone_refine_condition_url(
        @refine_inline_criterion.to_params.merge(id: condition.id)), class: "refine--condition-list-item" %>
  <% end %>
  <div style="margin-top: 12px">
    <button class="refine--inline-btn" data-action="click->refine--popup#hide" type="button">
      <%= t('global.buttons.cancel') %>
    </button>
  </div>
<% end %>
