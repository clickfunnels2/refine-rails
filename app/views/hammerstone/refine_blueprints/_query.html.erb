<%= turbo_frame_tag 'refine', data: {
  controller: "refine--state",
  refine__state_configuration_value: @configuration.to_json,
  refine__state_url_value: hammerstone_refine_blueprint_path } do %>
  <%= turbo_frame_tag 'groups' do %>
    <% @configuration[:blueprint].each_with_index do |criteria, index| %>
      <%= render partial: 'hammerstone/refine_blueprints/group', locals: {
        blueprint_path: ['blueprint', index],
        conditions: @configuration[:conditions],
        criteria: criteria,
        group_id: index }
      %>
    <% end %>
  <% end %>
  <%= form_tag(hammerstone_refine_blueprint_path, method: :post, data: {
    controller: "refine--add",
    action: "submit->refine--add#group" }) do %>
    <input type="hidden" name="configuration" value="<%= @configuration.to_json %>" />
    <input type="hidden" name="group" value="" />
    <button
      class="text-center px-4 py-2 border border-gray-300 shadow-sm text-md font-bold rounded-md text-gray-600 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 w-full mt-2"

      type="submit"
    >
      Add an 'Or'
    </button>
  <% end %>
<% end %>
