<%
  src ||= ""
  container_class = container_class 
  frame_class = frame_class 
  is_open ||= false
  use_modal ||= false
  fill_modal ||= false
%>

<% if use_modal %>
  <%= render "refine/inline/filters/modal",
    frame_id: frame_id,
    container_class: container_class,
    frame_class: frame_class,
    is_open: is_open,
    fill_modal: fill_modal,
    src: src do
  %>
    <%= capture do %>
      <%= yield %>
    <% end %>
  <% end %>
<% else %>
  <%= render "refine/inline/filters/popup",
    frame_id: frame_id,
    container_class: container_class,
    frame_class: frame_class,
    is_open: is_open,
    src: src do
  %>
    <%= capture do %>
      <%= yield %>
    <% end %>
  <% end %>
<% end %>