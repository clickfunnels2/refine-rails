<% if @filter_submit_success %>
  <%= turbo_stream.append_all "body" do %>
    <script>
      (function() {
        const formId = <%= @form.id.to_json.html_safe %>
        const event = new CustomEvent("filter-submit-success", {
          bubbles: true,
          detail: {
            stableId: <%= @stable_id.to_json.html_safe %>,
            url: <%= @url_for_redirect.to_json.html_safe %>,
            formId: formId
          }
        })
        document
          .getElementById(<%= dom_id(@form, "query").to_json.html_safe %>)
          .dispatchEvent(event)
      })()
    </script>
  <% end %>
<% else %>
  <%= turbo_stream.replace(dom_id(@form, "query"), partial: "hammerstone/refine_blueprints/query") %>
<% end %>
